/* PROJECTS START */
.projects {
  background: var(--color-accent);
  padding-top: 4rem;
  padding-bottom: 4rem;
  .container {
    display: flex;
    flex-direction: column;
    justify-content: space-even;
    align-items: center;
    /* title */
    .projects__title {
      margin: 0;
      font-family: var(--font-accent);
      font-size: var(--font-size-4);
      font-weight: var(--font-normal);
    }
    .projects__group {
      display: flex;
      justify-content: space-between;
    }
  }
}
/* PROJECTS END */
.project__card {
  max-width: 300px;
  margin: 0 0.5rem;
  background-color: var(--color-secondary);
  border: 1px solid var(--color-primary);
  padding: 0.5rem;
}

.project__img {
  width: 100%;
  height: 214px;
  object-fit: cover;
}

.tag {
  padding: 0.25rem 0.5rem;
  border: 1px solid var(--color-primary);
  font-size: 0.75rem;
  font-weight: var(--font-demi-bold);
  color: var(--color-primary);
}

.project__title {
  font-size: 1.5rem;
  font-weight: var(--font-demi-bold);
  margin-top: 1rem;
}

p {
  font-size: 14px;
  color: var(--color-primary);
  line-height: 150%;
}

.project__details {
  padding: 1rem 0.5rem 0.5rem 0.5rem;
}

.btn--projects {
  margin: 0 auto;
  display: block;
  cursor: pointer;
}

.btn--projects:focus,
.btn--projects:hover {
  background-color: var(--color-accent);
  color: var(--color-primary);
}

/* BUTTON START */
.btn {
  font-family: var(--font-accent);
  font-size: 1.5rem;
  padding: 0.5rem 2rem;
}

.btn--primary {
  background: var(--color-primary);
  color: var(--color-secondary);
}

.btn--secondary {
  color: var(--color-primary);
  background: var(--color-secondary);
  border: 1px solid var(--color-primary);
}

.btn--accent {
  color: var(--color-primary);
  background: var(--color-accent);
}
/* BUTTON END */
